<Window x:Class="se2_loon_hh.Forms.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:se2_loon_hh.Forms"
        mc:Ignorable="d"
        Title="Help" Height="450" Width="450" Icon="/se2-loon-hh;component/Resources/house.png" ResizeMode="CanMinimize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <TreeView Name="HelpSelection" SelectedItemChanged="HelpSelectionChanged" Grid.Column="0">
            <TreeViewItem Header="Client">
                <TreeViewItem Name="addClient" Header="Add"></TreeViewItem>
                <TreeViewItem Name="viewClient" Header="View"></TreeViewItem>
            </TreeViewItem>
            <TreeViewItem Header="Organization">
            </TreeViewItem>
            <TreeViewItem Header="Report">
            </TreeViewItem>
        </TreeView>
        <TextBlock Grid.Column="1" x:Name="textBlock" HorizontalAlignment="Left" Margin="10,5,5,5" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="411" Width="313"/>
    </Grid>
</Window>
