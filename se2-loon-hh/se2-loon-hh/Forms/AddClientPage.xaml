                                <Label>Can we contact you after today?</Label>
                                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                                    <RadioButton>Yes</RadioButton>
                                    <RadioButton>No</RadioButton>
                                </StackPanel>
                            </Grid>
                            <Grid>
                                <Label>Staff Conducting Intake:</Label>
                                <TextBox/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </Paragraph>
            </FlowDocument>
        </FlowDocumentPageViewer>
