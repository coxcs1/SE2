                                </StackPanel>
                                <StackPanel Visibility="{Binding ElementName=OtherHS, Path=IsSelected, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <Grid>
                                        <Label>Comments:</Label>
                                        <TextBox Height="125" AcceptsReturn="True" ScrollViewer.VerticalScrollBarVisibility="Visible"/>
                                    </Grid>
                                </StackPanel>
                            </StackPanel>

                            <StackPanel Visibility="{Binding ElementName=GED, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <Grid>
                                    <Label>Status:</Label>
                                    <ComboBox>
                                        <ComboBoxItem x:Name="HaveGED">Have GED</ComboBoxItem>
                                        <ComboBoxItem x:Name="PursuingGED">Pursuing GED</ComboBoxItem>
                                        <ComboBoxItem x:Name="OtherGED">Other</ComboBoxItem>
                                    </ComboBox>
                                </Grid>
                                <StackPanel Visibility="{Binding ElementName=HaveGED, Path=IsSelected, Converter={StaticResource BooleanToVisibilityConverter}}">
